@{
    Layout = "~/Views/QuizMaster/_LayoutQuizMaster.cshtml";
    ViewBag.Title = "New Quiz";
 }



<h2>Een nieuw game maken.</h2>
<form class="" role="form" action="" method="post">
  <div class="form-group">
    <label class="" for="">Naam van het spel</label>
    <input type="text" class="form-control" id="gameName" name="gameName" placeholder="Naam van het nieuwe spel">
  </div>
    <hr />
    <div id="vraag">
  <div class="form-group">
    <label class="sr-only" for="">Vraag 1 </label>
    <input type="text" class="form-control" id="gamequestion" name="question" placeholder="Vraag #">
  </div>
    @for (var i = 0; i < 3; i++)
    {
    @:<div class="form-group">
    <label class="sr-only" for="">Antwoord @(i+1)  </label>
    <input type="text" class="form-control" id="" name="a@(i+1)" placeholder="Antwoord @(i+1)"/>
        <input type="checkbox" name="ca@(i+1)" />
     @:</div>   
        }
 </div>
  <hr />
    <!-- Opslaan -->
  <button type="submit" class="btn btn-default">Opslaan</button>
    <!-- Ajax call opslaan en nieuwe vraag op het scherm zetten -->
  <button type="" id="newQuestion" class="btn btn-default" onclick="AddQuestion()">Opslaan en nieuwe vraag</button>
</form>


<script>
    $(function () // execute once the DOM has loaded
    {
        var count = 1;
        // wire up Add Item button click event
        $("#newQuestion").click(function (event) {
            event.preventDefault();
            count++;
            var t1 = ['<div id="vraag">',
                '<div class="form-group">',
                '<label class="" for="">Vraag '+ count +'</label>',
                '<input type="text" class="form-control"',
                'id="gameName" name="gameName" placeholder="Vraag #">'
            ];

           
                
                     
            $(t1.join('')).appendTo('#vraag');

            for (var i = 1; i < 4; i++)
            {
                t2 = ['<div class="form-group">',
                      '<label class="sr-only" for="">Antwoord '+ i +'  </label>',
                      '<input type="text" class="form-control" id="" name="" placeholder="Antwoord ' + i + '"/>',
                      '<input type="checkbox" name="" />',
                      '</div>']
                    $(t2.join('')).appendTo('#vraag');
                }
    
        });

    });

</script>